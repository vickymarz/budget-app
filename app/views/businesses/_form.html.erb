<%= form_with model: business, url: category_businesses_path, :html => {:class => 'form', :id => 'form' }  do |form| %>

      <div class="field">
         <%= form.select :category, categories.map { |category| category.name}, :multiple => true, required: true, class: 'select' %><br />
         
      <div>
       <div class="field">
        <%= form.text_field :name, autofocus: true, autocomplete: "text", placeholder: "Enter transaction name" %>
        <% business.errors.full_messages_for(:name).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
      <div class="field">
        <%= form.number_field :amount, autofocus: true, placeholder: "Enter Amount" %>
        <% business.errors.full_messages_for(:amount).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>

       <div class="actions">
      <%= form.submit "Add", class: 'category-btn'%>
    </div>
<% end %>

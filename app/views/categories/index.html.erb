<section class='categories_controllers'>
     <header class="input-container">
      <nav>
        <ul class='links'>
          <li>
            <i class="fa fa-bars"></i>
          <li>
          <li>
            TRANSACTIONS
          <li>
          <li>
            <i class="fa fa-search"></i>
          </li>
        </ul>
      </nav>
  </header>

 <section>
       
     <% if @categories.exists? %>
      <ul class="category-lists-wrapper">
          <% @categories.each do |category| %>
          <li>
            <div class='desc'>
              <%= image_tag(category.icon, class:'list_image') %>
              <span>
                <p><%= category.name %></p>
                <small><%= category.created_at.to_date.strftime("%d %b, %Y") %></small>
              </span>
            </div>
              <strong>$0.00</strong>
          </li> 
          <% end %>
      </ul>
 
   
   <% else %>
          <p>No Category Added yet</p> 
      <% end %>
  <div>
 <div class='category-footer'>
    <%= button_to "Add Category", new_category_path, method: :get, class: 'category-btn' %>
  </div>
</section>
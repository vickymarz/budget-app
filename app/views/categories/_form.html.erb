<%= form_with model: category, url: categories_path, :html => {:class => 'form', :id => 'form' }  do |form| %>
      <div>
        <%= form.text_field :name, autofocus: true, autocomplete: "text", placeholder: "Enter category name" %>
        <% category.errors.full_messages_for(:name).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>

        <%= form.text_field :icon, autofocus: true, placeholder: "Enter category icon url" %>
        <% category.errors.full_messages_for(:icon).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>

       <div class="actions">
      <%= f.submit "Add", class: "btn"%>
    </div>
<% end %>
